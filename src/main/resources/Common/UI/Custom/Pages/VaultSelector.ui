@UnlockedButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@LockedButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 13, TextColor: #6e7da1, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #323f4f, LabelStyle: (FontSize: 13, TextColor: #8090ab, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #242e3a, LabelStyle: (FontSize: 13, TextColor: #6e7da1, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 13, TextColor: #b6c9de, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 420, Height: 370);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 20);

  Label #Title {
    Text: "Your Vaults";
    Anchor: (Height: 45);
    Style: (
      FontSize: 24,
      TextColor: #ffffff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 16); }

  Group #Row1 {
    LayoutMode: Center;
    Anchor: (Height: 50);

    TextButton #Vault1 {
      Text: "Vault 1";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }

    Group { Anchor: (Width: 10); }

    TextButton #Vault2 {
      Text: "Vault 2";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }

    Group { Anchor: (Width: 10); }

    TextButton #Vault3 {
      Text: "Vault 3";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }
  }

  Group { Anchor: (Height: 8); }

  Group #Row2 {
    LayoutMode: Center;
    Anchor: (Height: 50);

    TextButton #Vault4 {
      Text: "Vault 4";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }

    Group { Anchor: (Width: 10); }

    TextButton #Vault5 {
      Text: "Vault 5";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }

    Group { Anchor: (Width: 10); }

    TextButton #Vault6 {
      Text: "Vault 6";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }
  }

  Group { Anchor: (Height: 8); }

  Group #Row3 {
    LayoutMode: Center;
    Anchor: (Height: 50);

    TextButton #Vault7 {
      Text: "Vault 7";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }

    Group { Anchor: (Width: 10); }

    TextButton #Vault8 {
      Text: "Vault 8";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }

    Group { Anchor: (Width: 10); }

    TextButton #Vault9 {
      Text: "Vault 9";
      Anchor: (Width: 110, Height: 42);
      Style: @LockedButtonStyle;
    }
  }

  Group { FlexWeight: 1; }

  Group {
    LayoutMode: Center;
    Anchor: (Height: 44);

    TextButton #CloseButton {
      Text: "CLOSE";
      Anchor: (Width: 110, Height: 38);
      Style: @CloseButtonStyle;
    }
  }

  Group { Anchor: (Height: 6); }

  Label {
    Text: "Press ESC to close";
    Anchor: (Height: 16);
    Style: (FontSize: 11, TextColor: #4a5568, HorizontalAlignment: Center);
  }
}
